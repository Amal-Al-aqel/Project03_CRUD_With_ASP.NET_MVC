
@{
    var Session = (SessionModel)ViewData["Session"];
}

@model SessionModel

<form asp-action="Edit" method="post">
    <div class="form-group">
        <div>
            <input type="hidden" name="Id" asp-for="@Session.Id" />
        </div>
    </div>
    <div class="form-group">
        <div>
            <input type="hidden" name="InstructorId" asp-for="@Session.InstructorId" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="SessionTime">Session Time</label>
        <input type="datetime-local" asp-for="SessionTime" value="@Session.SessionTime" min="2021-06-07T00:00" max="2021-06-14T00:00" class="form-control" id="sessionTime" aria-describedby="sessionTime" placeholder="Enter Session Time">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <div class="form-group">
        <label asp-for="Duration">Session Duration</label>
        <input type="text" asp-for="Duration" value="@Session.Duration" class="form-control" id="duration" aria-describedby="sessionDuration" placeholder="Enter Session Duration">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <div class="form-group">
        <label asp-for="Location">Session Location</label>
        <input type="text" asp-for="Location" value="@Session.Location" class="form-control" id="location" aria-describedby="sessionLocation" placeholder="Enter Session Location">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <button type="submit" class="btn btn-primary" value="Update">Save</button>
</form>